<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biyesheji.android.robot.ui.LoginActivity">

    <EditText
        android:id="@+id/activity_login_oneEdt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="账号"
        />
    <EditText
        android:id="@+id/activity_login_twoEdt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:hint="密码"
        />

    <Button
        android:id="@+id/activity_login_makeSureBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_login_twoEdt"
        android:layout_marginTop="20dp"
        android:text="确认"
        android:background="@drawable/anniu_btn"
        android:textColor="#fff"/>
</RelativeLayout>
