<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行模式切换"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"/>
                <Button
                    android:id="@+id/btn_mode_programe"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#fff"
                    android:text="切换到三维动作编辑模式"
                    android:layout_margin="5dp"
                    android:textSize="18sp"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能问答(开/关)"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:id="@+id/textView" />
            <ToggleButton
                android:id="@+id/askanswerKG"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_alignTop="@+id/textView" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语音控制(开/关)"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    />
                <ToggleButton
                    android:id="@+id/yuyinkongzhiKG"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/btnDatabase"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="知识库"
                    android:textColor="#fff"
                    android:background="@drawable/btnpresshuang"
                    android:layout_margin="15dp"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/btnSpeaker"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="选择发音人"
                    android:textColor="#fff"
                    android:background="@drawable/btnpresshuang"
                    android:layout_margin="15dp"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <Button
                    android:id="@+id/btn_jiadayingliang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="加大音量"
                    android:textColor="#fff"
                    android:background="@drawable/btnpress"
                    android:layout_margin="15dp"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/btn_jianxiaoyingliang"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:text="减小音量"
                    android:textColor="#fff"
                    android:background="@drawable/btnpress"
                    android:layout_margin="15dp"
                    android:textSize="20dp"/>


            </LinearLayout>

            <Button
                android:id="@+id/btn_tuoluoyi"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_height="60dp"
                android:text="陀螺仪"
                android:visibility="gone"
                android:background="@drawable/btnpress"
                android:layout_margin="5dp"/>

