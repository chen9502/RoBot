<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"

           >
            <TextView
                android:id="@+id/one_specialTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性动作指令"
                android:layout_margin="20dp"
                android:textColor="#000"
                />
            <com.biyesheji.android.robot.entity.Mygridview
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:layout_margin="5dp">
            </com.biyesheji.android.robot.entity.Mygridview>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btn_append"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="append_onclick"
            android:text="添加指令"
            android:textColor="#FFF"
            android:background="@drawable/anniu_btn"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="append_onclick"
            android:text="删除指令"
            android:enabled="false"
            android:textSize="18dp"
            android:background="@drawable/delshape"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_mode_gexin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="模式切换"
        android:background="@drawable/anniu_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"
        android:textSize="20sp"/>


</LinearLayout>