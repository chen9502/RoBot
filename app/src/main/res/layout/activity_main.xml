<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biyesheji.android.robot.ui.MainActivity">

    <RelativeLayout
        android:id="@+id/activity_main_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4682B4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机器人控制系统"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <Button
        android:id="@+id/activity_main_oneBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/anniu_btn"
        android:text="设备1"
        android:textColor="#fff"
        android:layout_below="@id/activity_main_rl"/>
    <Button
        android:id="@+id/activity_main_twoBtn"
        android:layout_below="@id/activity_main_rl"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="设备2"
        android:textColor="#fff"
        android:background="@drawable/anniu_btn"
        android:layout_toRightOf="@id/activity_main_oneBtn"/>
</RelativeLayout>
